{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/render-job.schema.json",
  "title": "Resolve Render Job",
  "type": "object",
  "required": [
    "job_id",
    "created_at",
    "source",
    "target",
    "render",
    "routing",
    "metadata"
  ],
  "properties": {
    "job_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._:-]+$"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "object",
      "required": ["project", "timeline", "input_files"],
      "properties": {
        "project": { "type": "string" },
        "timeline": { "type": "string" },
        "input_files": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      }
    },
    "target": {
      "type": "object",
      "required": ["output_path", "filename", "container"],
      "properties": {
        "output_path": { "type": "string" },
        "filename": { "type": "string" },
        "container": { "type": "string", "enum": ["mov", "mp4", "mxf"] }
      }
    },
    "render": {
      "type": "object",
      "required": ["codec", "profile", "resolution", "fps", "audio"],
      "properties": {
        "codec": { "type": "string" },
        "profile": { "type": "string" },
        "resolution": {
          "type": "object",
          "required": ["width", "height"],
          "properties": {
            "width": { "type": "integer", "minimum": 1 },
            "height": { "type": "integer", "minimum": 1 }
          }
        },
        "fps": { "type": "number", "minimum": 1 },
        "audio": {
          "type": "object",
          "required": ["codec", "sample_rate", "channels"],
          "properties": {
            "codec": { "type": "string" },
            "sample_rate": { "type": "integer" },
            "channels": { "type": "integer", "minimum": 1 }
          }
        },
        "ffmpeg_args": { "type": "string" }
      }
    },
    "routing": {
      "type": "object",
      "required": ["queue", "priority", "node_group"],
      "properties": {
        "queue": { "type": "string", "default": "default" },
        "priority": { "type": "integer", "minimum": 1, "maximum": 100, "default": 50 },
        "node_group": { "type": "string", "default": "macmini" }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["reel", "timecode_start"],
      "properties": {
        "reel": { "type": "string" },
        "timecode_start": { "type": "string" },
        "color_space": { "type": "string" },
        "camera": { "type": "string" },
        "notes": { "type": "string" }
      }
    }
  }
}
